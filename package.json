{
  "name": "arazzo-vscode",
  "publisher": "connethics",
  "displayName": "Arazzo VSCode",
  "pricing": "Free",
  "description": "VS Code extension for Arazzo YAML files with navigation, autocompletion, and validation.",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/connEthics/arazzo-vscode.git"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Linters"
  ],
  "keywords": [
    "arazzo",
    "api",
    "workflow",
    "testing",
    "openapi",
    "yaml",
    "visualization",
    "flowchart"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arazzo-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "arazzo-vscode.openPreview",
        "title": "Open Arazzo Preview",
        "icon": "$(preview)"
      },
      {
        "command": "arazzo-vscode.openFlowchart",
        "title": "Open Arazzo Flowchart",
        "icon": "$(graph)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "arazzo-vscode.openPreview",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "arazzo-vscode.openFlowchart",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  }
}
